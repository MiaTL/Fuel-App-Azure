@model Profile

@{
    ViewBag.Title = "Edit Profile";
}

<h2 class ="text-center mt-5">Edit Profile Information</h2>

<form asp-controller="Account" asp-action="EditProfile" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FullName" class="form-control" placeholder="Full Name">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address1" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address1" class="form-control" placeholder="Street Address 1">
            <span asp-validation-for="Address1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address2" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address2" class="form-control" placeholder="Street Address 2">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="State" asp-items="Model.States"></select>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="Zipcode" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Zipcode" class="form-control" placeholder="Zipcode">
            <span asp-validation-for="Zipcode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button asp-controller="Account" asp-action="Profile" type="submit" class="btn btn-primary">Finish</button>
        </div>
    </div>
</form>